<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="330dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:progressBackgroundTint="#534C4C"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressText" />

    <ImageView
        android:id="@+id/notificationBell"
        android:layout_width="40dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecycler"
        android:layout_width="157dp"
        android:layout_height="222dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/taskButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/noteTakingButton"
        android:layout_width="273dp"
        android:layout_height="74dp"
        android:layout_marginBottom="12dp"
        android:text="Note Taking"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/timeTrackingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/timeTrackingButton"
        android:layout_width="273dp"
        android:layout_height="74dp"
        android:layout_marginBottom="50dp"
        android:text="Time Tracking"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/musicText"
        android:layout_width="147dp"
        android:layout_height="221dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        android:text="No music playing"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/taskButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/taskButton"
        android:layout_width="273dp"
        android:layout_height="74dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="12dp"
        android:text="Task List"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/noteTakingButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="113dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title_dashboard"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/taskRecycler"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="149dp"
        android:layout_height="29dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="Your Progress"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>