<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/noteTakingButton"
        android:layout_width="198dp"
        android:layout_height="76dp"
        android:layout_marginTop="108dp"
        android:text="Note Taking"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/musicText" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="177dp"
        android:layout_height="53dp"
        android:progressBackgroundTint="#534C4C"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/taskRecycler"
        app:layout_constraintEnd_toEndOf="@+id/taskRecycler"
        app:layout_constraintStart_toStartOf="@+id/taskRecycler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

    <ImageView
        android:id="@+id/notificationBell"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/musicText"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="20dp"
        android:text="Music"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/timeButton"
        app:layout_constraintTop_toBottomOf="@+id/timeButton" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="101dp"
        android:layout_height="101dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:text="Time"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/notificationBell"
        app:layout_constraintTop_toBottomOf="@+id/notificationBell" />

    <Button
        android:id="@+id/timeTrackingButton"
        android:layout_width="198dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:text="Time Tracking"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTakingButton" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecycler"
        android:layout_width="183dp"
        android:layout_height="223dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/musicText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timeButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/taskButton"
        android:layout_width="113dp"
        android:layout_height="44dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:text="Task List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskRecycler" />

</androidx.constraintlayout.widget.ConstraintLayout>