<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:outlineProvider="none"
    app:cardBackgroundColor="@color/tertiary_color"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <!-- Define the layout for the note preview, such as TextViews or other views -->
    <!-- Customize it based on your requirements -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Title"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contentText_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleText_item"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Notes..."
            android:textSize="16dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
