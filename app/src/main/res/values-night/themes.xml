<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EfficenZ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color_dark</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_color_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_color_dark</item>
    </style>



    <style name="header1_text">
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="header2_text">
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="normal_text">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="green_blob_1">
        <item name="tint">#526046</item>
    </style>

    <style name="green_blob_2">
        <item name="tint">#4D5446</item>
    </style>

    <style name="green_blob_3">
        <item name="tint">#3D4339</item>
    </style>

    <style name="wave">
        <item name="tint">#526046</item>
    </style>

    <style name="wave2">
        <item name="tint">#4D5446</item>
    </style>


    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#3D4339</item>
    </style>

    <style name="BottomNavBar">
        <item name="android:background">@color/black</item>
        <item name="rippleColor">#3D4339</item>
        <item name="itemIconTint">@drawable/bottom_nav_bar_color_dark</item>
        <item name="itemTextColor">@drawable/bottom_nav_bar_color_dark</item>
        <item name="itemPaddingTop">0dp</item>
    </style>

    <style name="roundedCorner_inputText">
        <item name="android:background">@drawable/rounded_corner_input_text_dark</item>
    </style>

    <style name="button_yellow">
        <item name="android:backgroundTint">@color/secondary_color_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="button_green">
        <item name="android:backgroundTint">#526046</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="button_grey">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="cardView_style">
        <item name="cardElevation">0dp</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="cardView_button_style">
        <item name="cardElevation">0dp</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="icons_green">
        <item name="tint">@color/primary_color_dark</item>
    </style>

    <style name="icons_grey">
        <item name="tint">@android:color/secondary_text_dark</item>
    </style>

    <!-- NOTES STYLES -->
    <style name="notes_seachbox">
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="floating_action_btn">
        <item name="android:backgroundTint">@color/secondary_color_dark</item>
        <item name="borderWidth">0dp</item>
    </style>



    <!-- MUSIC STYLES -->
    <style name="music_card">
        <item name="cardElevation">0dp</item>
        <item name="android:backgroundTint">@color/primary_color_dark</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- TASK MANAGEMENT STYLES -->
    <style name="task_header1_text">
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="task_popup_bg_color">
        <item name="backgroundColor">@color/bg_color_dark</item>
    </style>

    <!-- CALENDAR STYLES -->
    <style name="calendar_cell_normal">
        <item name="android:background">@drawable/rounded_corner_dark</item>
    </style>

    <style name="calendar_cell_orange">
        <item name="android:background">@drawable/rounded_corner_task_dark</item>
    </style>

    <style name="calendar_cell_red">
        <item name="android:background">@drawable/rounded_corner_more_task_dark</item>
    </style>

    <!-- TIMER STYLES -->
    <style name="timer_circle">
        <item name="tint">@color/dark_grey</item>
    </style>

    <style name="timer_task_title">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/tertiary_color_dark</item>
        <item name="android:ems">8</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>