<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EfficenZ" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary color -->
        <item name="colorTertiary">@color/tertiary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_color</item>
    </style>

    <!-- LIGHT MODE -->

    <style name="header1_text">
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="header2_text">
        <item name="fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="normal_text">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="BottomNavBar">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav_bar_color</item>
        <item name="itemTextColor">@drawable/bottom_nav_bar_color</item>
        <item name="itemIconSize">30dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Bottom Nav Bar Indicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/tertiary_color_light</item>
    </style>

    <!-- input text box -->
    <style name="roundedCorner">
        <item name="android:background">@drawable/rounded_corner_input_text</item>
    </style>

    <style name="button_yellow">
        <item name="android:backgroundTint">@color/secondary_color_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_green">
        <item name="android:backgroundTint">@color/primary_color_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_grey">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cardView_style">
        <item name="cardElevation">4dp</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="cardView_button_style">
        <item name="cardElevation">4dp</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="icons">
        <item name="tint">@color/primary_color_light</item>
    </style>

</resources>